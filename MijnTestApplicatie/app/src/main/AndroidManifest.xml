<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.xander.mijntestapplicatie" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />

    <!--
 The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but are recommended.
    -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="nl.xannic.minor.touristguide.MyActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyCXGUn5voNmr2gDIV-OXZYlZIY2Pug5wSs" />

        <activity
            android:name="nl.xannic.minor.touristguide.MapsActivity"
            android:label="@string/title_activity_maps" />
        <activity
            android:name="nl.xannic.minor.touristguide.OverviewActivity"
            android:label="@string/title_activity_overview" >
        </activity>
        <activity
            android:name="nl.xannic.minor.touristguide.LocationActivity"
            android:label="@string/title_activity_location" >
        </activity>
        <activity
            android:name="nl.xannic.minor.touristguide.itemActivity"
            android:label="@string/title_activity_item" >
        </activity>
        <activity
            android:name="nl.xannic.minor.touristguide.PathGoogleMapActivity"
            android:label="@string/title_activity_path_google_map" >
        </activity>
    </application>

</manifest>
