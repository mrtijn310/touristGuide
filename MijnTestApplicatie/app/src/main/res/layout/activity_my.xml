<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MyActivity">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Push Notification"
        android:id="@+id/btnNewIntent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Edit Last Notification"
        android:id="@+id/btEditNotification"
        android:layout_below="@+id/btnNewIntent"
        android:layout_alignRight="@+id/btnNewIntent"
        android:layout_alignEnd="@+id/btnNewIntent" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Google Maps Test"
        android:id="@+id/btGoogle"
        android:layout_below="@+id/btEditNotification"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Go to overview"
        android:id="@+id/btGoToOverview"
        android:layout_below="@+id/btGoogle"
        android:layout_alignRight="@+id/btEditNotification"
        android:layout_alignEnd="@+id/btEditNotification" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Go to Location"
        android:id="@+id/btGoToLocation"
        android:layout_below="@+id/btGoToOverview"
        android:layout_alignRight="@+id/btEditNotification"
        android:layout_alignEnd="@+id/btEditNotification" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Route Test"
        android:id="@+id/btRoutePlanTest"
        android:layout_below="@+id/btGoToLocation"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btGoToLocation"
        android:layout_alignEnd="@+id/btGoToLocation" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Route Test 2(eigenlijk 1 naja yolo)"
        android:id="@+id/btRoutePlanTest2"
        android:layout_below="@+id/btRoutePlanTest"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
