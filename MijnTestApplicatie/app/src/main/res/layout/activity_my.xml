<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MyActivity">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Push Notification"
        android:id="@+id/btnNewIntent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Edit Last Notification"
        android:id="@+id/btEditNotification"
        android:layout_below="@+id/btnNewIntent"
        android:layout_alignRight="@+id/btnNewIntent"
        android:layout_alignEnd="@+id/btnNewIntent" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Google Maps Test"
        android:id="@+id/btGoogle"
        android:layout_below="@+id/btEditNotification"
        android:layout_alignParentLeft="true" />

</RelativeLayout>
